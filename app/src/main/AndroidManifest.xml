<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.clairvoyance.bookmarket">

    <uses-permission android:name="android.permission.INTERNET" />

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ActLoginActivity"
            android:label="BookMarket">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ActMainActivity" />
        <activity android:name=".ActSellMainActivity" />
        <activity
            android:name=".ActSellAddBook"
            android:parentActivityName=".ActSellMainActivity">

            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.clairvoyance.bookmarket.ActSellMainActivity" />
        </activity>
        <activity
            android:name=".ActSellViewPosts"
            android:parentActivityName=".ActSellMainActivity">

            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.clairvoyance.bookmarket.ActSellMainActivity" />
        </activity>
        <activity
            android:name=".ActSellSearchScan"
            android:parentActivityName=".ActSellMainActivity">

            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.clairvoyance.bookmarket.ActSellMainActivity" />
        </activity>
        <activity
            android:name=".ActSellSearchResults"
            android:parentActivityName=".ActSellSearchResults">

            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.clairvoyance.bookmarket.ActSellSearchResults" />
        </activity>
        <activity android:name=".ActSellViewRequests" android:parentActivityName=".ActSellMainActivity">

        <!-- Parent activity meta-data to support 4.0 and lower -->
        <meta-data
            android:name="android.support.PARENT_ACTIVITY"
            android:value="com.clairvoyance.bookmarket.ActSellMainActivity" />
        </activity>
        <activity android:name=".ActSellViewRequest"/>

        <service
            android:name=".MyFirebaseMessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT"/>
            </intent-filter>
        </service>

        <service
            android:name=".MyFirebaseInstanceIDService">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT"/>
            </intent-filter>
        </service>

    </application>

</manifest>